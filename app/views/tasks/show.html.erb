<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4"><%= @task.title %></h1>
  <p class="mb-2 text-gray-600">状態:
    <span class="px-2 py-1 text-sm font-medium rounded <%= @task.status_class %>">
      <%= @task.status_label %>
    </span>
  </p>
  <p class="mb-2 text-gray-600">期限: <%= @task.due_date&.strftime('%Y-%m-%d') %></p>
  <p class="mb-4 text-gray-800 whitespace-pre-wrap"><%= @task.description %></p>

  <div class="flex space-x-4">
    <%= link_to '編集', edit_team_task_path(@team, @task), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    <%= link_to '戻る', team_path(@team), class: "px-4 py-2 bg-gray-300 text-black rounded hover:bg-gray-400" %>
  </div>
</div>
