<%= form_with model: @team, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, 'チーム名', class: 'block mb-1 font-medium' %>
    <%= f.text_field :name, class: 'w-full p-2 border rounded' %>
  </div>
  <div class="mb-4">
    <%= f.label :description, '説明', class: 'block mb-1 font-medium' %>
    <%= f.text_area :description, rows: 4, class: 'w-full p-2 border rounded' %>
  </div>
  <div>
    <%= f.submit class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
  </div>
<% end %>