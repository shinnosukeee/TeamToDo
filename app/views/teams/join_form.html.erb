<div class="max-w-md mx-auto p-4">
  <h1 class="text-xl font-bold mb-4">チームコードで参加</h1>
  <%= form_with url: join_by_code_teams_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :join_code, "チームコード", class: "block mb-1 font-medium" %>
      <%= f.text_field :join_code, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= f.submit "参加", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
