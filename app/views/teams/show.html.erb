<div class="max-w-4xl mx-auto p-4">
  <div class="mb-6">
    <h1 class="text-2xl font-bold"><%= @team.name %></h1>
    <p class="text-gray-700 mb-2"><%= @team.description %></p>

    <div class="flex gap-2">
      <% if current_user.teams.include?(@team) %>
        <%= button_to '退出する', leave_team_path(@team), method: :delete, data: { confirm: '本当に退出しますか？' }, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600" %>
      <% end %>
      <% if current_user == @team.owner %>
        <%= link_to '招待する', invite_team_path(@team), class: "px-3 py-1 bg-purple-500 text-white rounded hover:bg-purple-600" %>
      <% end %>
      <%= link_to 'タスク一覧を見る', team_tasks_path(@team), class: "px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600" %>
      <%= link_to 'チーム一覧に戻る', teams_path, class: "px-3 py-1 bg-gray-300 text-black rounded hover:bg-gray-400" %>
    </div>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2">チームメンバー</h2>
      <ul class="list-disc pl-5">
        <% @team.users.each do |user| %>
          <li><%= user.email %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>