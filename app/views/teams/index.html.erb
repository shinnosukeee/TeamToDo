<div class="max-w-4xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">あなたのチーム一覧</h1>
  <div class="space-y-2">
    <% @teams.each do |team| %>
      <div class="flex justify-between items-center p-4 bg-white shadow rounded">
        <div>
          <%= link_to team.name, team_path(team), class: "text-xl text-blue-600 hover:underline" %>
          <p class="text-sm text-gray-600"><%= truncate(team.description, length: 80) %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-6 flex space-x-4">
    <%= link_to '新しいチームを作成', new_team_path, class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
    <%= link_to 'チームに参加する', join_form_teams_path, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  </div>
</div>